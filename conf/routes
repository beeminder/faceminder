# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /example                    controllers.ExampleController.index
POST    /example/form               controllers.ExampleController.update

GET     /auth/:provider             controllers.OAuth2Controller.authenticate(provider)
GET     /auth/:provider/callback    controllers.OAuth2Controller.callback(provider)
GET     /auth/facebook/obtain       controllers.OAuth2Controller.obtainPermission

POST    /goal/obtain                controllers.GoalController.obtain
# okay this is pretty icky but maybe(?) necessary for permission granting?
GET     /goal/setup/:moduleId       controllers.GoalController.setup(moduleId)
POST    /goal/create                controllers.GoalController.create

#DEBUG
GET     /debug/grant/:permission   controllers.DebugController.grantPermission(permission)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
